<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.age %></td>
        <td><%= pet.breed %></td>
        <td><%= link_to 'Show', owner_pet_path(@owner, pet) %></td>
        <td><%= link_to 'Edit', edit_owner_pet_path(@owner, pet) %></td>
        <td><%= link_to 'Destroy', [@owner, pet], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Pet', new_owner_pet_path(@owner) %>
